{
	"title": "Change ctrl+KANA to ESC",
	"rules": [{
		"description": "Change ctrl+KANA key to Escape key",
		"manipulators": [{
			"type": "basic",
			"from": {
				"key_code": "japanese_kana",
				"modifiers": {
					"mandatory": ["control"]
				}
			},
			"to": [{
				"key_code": "escape"
			}]
		}]
	}]
}